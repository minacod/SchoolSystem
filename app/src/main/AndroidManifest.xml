<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.schoolsystem">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ClassRoomsActivity" />
        <activity
            android:name=".ui.AddRoomActivity"
            android:launchMode="standard" />
        <activity android:name=".ui.DepartmentsActivity" />
        <activity android:name=".ui.AddDepartmentActivity" />
        <activity android:name=".ui.CoursesActivity" />
        <activity android:name=".ui.AddCourseActivity" />
        <activity android:name=".ui.StudentsActivity" />
        <activity android:name=".ui.AddStudentActivity"></activity>
    </application>

</manifest>